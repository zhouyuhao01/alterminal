<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="aiterminal.android.chdmc.com.aiterminal.fragments.ChartFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="每日垃圾清运量"
        android:layout_gravity="center"/>
    <lecho.lib.hellocharts.view.LineChartView
        android:id="@+id/chart_1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        android:transitionName="line" />
    <TextView
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今日各类垃圾占比"
        android:layout_gravity="center"/>
    <lecho.lib.hellocharts.view.PieChartView
        android:layout_gravity="center"
        android:id="@+id/chart_2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_margin="10dp"
        android:transitionName="pie" />

</LinearLayout>
